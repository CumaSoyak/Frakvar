<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="farkvar.com">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
            android:name=".CoreApp"
            android:allowBackup="true"
            android:usesCleartextTraffic="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".ui.payment.paymentcash.PaymentCashActivity">
        </activity>
        <activity android:name=".ui.payment.paymentForm.PaymentFormActivity">
        </activity>
        <activity android:name=".ui.payment.paymentInfo.PaymentInfoActivity">
        </activity>
        <activity android:name=".ui.search.SearchActivity">
        </activity>
        <activity
                android:name=".ui.main.MainActivity"
                android:launchMode="singleTask"
                android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.bus.buslist.BusListActivity">
        </activity>
    </application>

</manifest>