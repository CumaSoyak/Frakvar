<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@drawable/background"
             tools:context=".ui.air.AirFragment">

    <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:background="@drawable/toolbar_back"
            android:layout_alignParentTop="true">

        <ImageView
                android:id="@+id/drawable_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="30dp"
                android:src="@drawable/ic_hamburger_menu"/>

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_bus_melon"/>


        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="50dp"
                android:background="@drawable/notification_background">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_notifications_gray"/>
        </RelativeLayout>


    </RelativeLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="60dp"
    >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

            <LinearLayout
                    android:id="@+id/from_airport"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_air_from"/>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="50dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:orientation="vertical">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:text="Nereden"
                            android:textColor="@color/melon"
                            android:textStyle="bold"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:text="İstanbul"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:text="Sabiha gökçen"/>
                </LinearLayout>


            </LinearLayout>

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp">

                <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:background="@color/cloudyBlue"
                        android:elevation="0dp"/>

                <ImageView
                        android:id="@+id/change_route_air"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:elevation="100dp"
                        android:src="@drawable/ic_change_rote"/>
            </RelativeLayout>

            <LinearLayout
                    android:id="@+id/to_airport"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_air_to"/>


                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="50dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:orientation="vertical">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:text="Nereden"
                            android:textColor="@color/melon"
                            android:textStyle="bold"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:text="İstanbul"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:text="Sabiha gökçen"/>
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@color/cloudyBlue"
                android:elevation="0dp"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <LinearLayout
                    android:id="@+id/time_air"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:text="Gidiş"
                        android:gravity="center"/>

                <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_calendar"/>

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp">

                    <TextView
                            android:id="@+id/day"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/muli_extralight"
                            android:gravity="center"
                            android:text="xxx"
                            android:textColor="@color/melon"
                            android:textSize="27dp"
                            android:textStyle="bold"
                            android:typeface="normal"/>

                    <TextView
                            android:id="@+id/month"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_toEndOf="@id/day"
                            android:gravity="center"
                            android:text="xxxx"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>

                    <TextView
                            android:id="@+id/name_of_day"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/month"
                            android:layout_marginStart="10dp"
                            android:layout_marginBottom="7dp"
                            android:layout_toEndOf="@id/day"
                            android:fontFamily="@font/muli_extralight"
                            android:gravity="center"
                            android:text="xxxx"
                            android:textColor="@color/brownishGrey"
                            android:textStyle="bold"/>
                </RelativeLayout>


            </LinearLayout>

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:background="@color/cloudyBlue"
                        android:elevation="0dp"/>


            </RelativeLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                <RelativeLayout android:layout_width="match_parent"
                                android:layout_height="25dp"
                                android:orientation="horizontal">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Dönüş"
                            android:layout_centerInParent="true"
                            android:gravity="center"/>
                    <ImageView
                            android:id="@+id/cancel_return_air"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_cancel_blue"
                            android:layout_alignParentEnd="true"
                            android:elevation="10dp"
                            android:visibility="gone"
                            android:layout_marginEnd="20dp"
                            android:layout_marginTop="5dp"

                    />
                </RelativeLayout>

                <RadioGroup
                        android:id="@+id/radiogroup_route"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical"
                        android:gravity="center"
                >

                    <RadioButton
                            android:id="@+id/choose_single_route"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:buttonTint="@color/midBlue"
                            android:checked="true"
                            android:gravity="center"
                            android:text="Tek Yön Gidiş"/>

                    <RadioButton
                            android:id="@+id/choose_double_route"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:buttonTint="@color/midBlue"
                            android:gravity="center"
                            android:text="Dönüş ekle"/>
                </RadioGroup>

                <LinearLayout
                        android:id="@+id/return_time_air"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="gone">

                    <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/ic_calendar"/>

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="20dp">

                        <TextView
                                android:id="@+id/return_day"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:fontFamily="@font/muli_extralight"
                                android:gravity="center"
                                android:text="xxx"
                                android:textColor="@color/melon"
                                android:textSize="27dp"
                                android:textStyle="bold"
                                android:typeface="normal"/>

                        <TextView
                                android:id="@+id/return_month"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_toEndOf="@id/return_day"
                                android:gravity="center"
                                android:text="xxxx"
                                android:textColor="@color/black"
                                android:textStyle="bold"/>

                        <TextView
                                android:id="@+id/return_name_of_day"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/return_month"
                                android:layout_marginStart="10dp"
                                android:layout_marginBottom="7dp"
                                android:layout_toEndOf="@id/return_day"
                                android:fontFamily="@font/muli_extralight"
                                android:gravity="center"
                                android:text="xxxx"
                                android:textColor="@color/brownishGrey"
                                android:textStyle="bold"/>
                    </RelativeLayout>
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="25dp"
                android:orientation="horizontal">

            <LinearLayout
                    android:id="@+id/choose_travel_count"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:background="@color/paleBlue"
                    android:orientation="horizontal"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="1 yolcu/ekonomi"
                        android:textColor="@color/midBlue"
                        android:textStyle="bold"/>

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/ic_statu_change"/>

            </LinearLayout>

            <CheckBox
                    android:id="@+id/choose_transfer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:background="@color/paleBlue"
                    android:buttonTint="@color/midBlue"
                    android:checked="true"
                    android:orientation="horizontal"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="Aktarmasız"
                    android:textColor="@color/midBlue"
                    android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/find_ticket"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="25dp"
                android:background="@color/midBlue"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:gravity="end|center_vertical"
                    android:text="Ucuz Bilet Bul"
                    android:textColor="@color/paleBlue"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_search_white"/>

        </LinearLayout>


    </LinearLayout>

</FrameLayout>