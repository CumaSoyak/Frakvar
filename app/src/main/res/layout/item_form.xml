<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shadow_backgorund"
            android:layout_margin="25dp">
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/ic_bus_blue"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   android:layout_marginTop="16dp"
                   android:layout_marginStart="16dp"
                   android:id="@+id/imageView8"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Gidiş yolcu bilgeri"

                  app:layout_constraintBottom_toBottomOf="@+id/imageView8"
                  app:layout_constraintStart_toEndOf="@+id/imageView8"
                  android:layout_marginStart="16dp"
                  app:layout_constraintTop_toTopOf="@+id/imageView8"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="12.koltuk yolcu bilgisi(Erkek)"
                  android:textColor="@color/midBlue"
                  app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginTop="16dp"
                  android:layout_marginStart="16dp"
                  app:layout_constraintTop_toBottomOf="@+id/imageView8" android:id="@+id/infoTitle"/>

    <TextView
            style="@style/ItemMargin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Ad"
            android:background="@drawable/shadow_backgorund"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/infoTitle" android:id="@+id/textView11"
              app:layout_constraintEnd_toEndOf="parent"/>
        <EditText
                style="@style/ItemMargin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                android:background="@drawable/shadow_backgorund"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView11"
                android:id="@+id/name"/>
        <TextView
                style="@style/ItemMargin"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Soyad"
                app:layout_constraintTop_toBottomOf="@+id/name"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/textView14"/>
        <EditText style="@style/ItemMargin"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginEnd="16dp"
                  android:background="@drawable/shadow_backgorund"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toBottomOf="@+id/textView14" android:id="@+id/surname"/>
        <TextView
                style="@style/ItemMargin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="T.C. Kimlik No"
                app:layout_constraintTop_toBottomOf="@+id/surname"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/textView17"/>
        <LinearLayout style="@style/ItemMargin"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      app:layout_constraintTop_toBottomOf="@+id/textView17"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintEnd_toEndOf="parent"
                      android:background="@drawable/shadow_backgorund"
                      android:layout_marginEnd="16dp" android:id="@+id/linearLayout">
            <EditText
                    android:id="@+id/tcNo"
                    android:layout_width="match_parent"
                      android:layout_weight="1"
                      android:layout_gravity="center"
                      android:layout_height="wrap_content"
            />
            <CheckBox
                    android:id="@+id/tcChecxbox"
                    android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="10sp"
                      android:layout_gravity="center"
                      android:layout_marginEnd="8dp"
                      android:text="T.C. vatandaşı değilim"/>

        </LinearLayout>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Ferdi kaza sigortası için gerekli."
                  app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                  app:layout_constraintStart_toStartOf="@+id/linearLayout"
                  android:id="@+id/textView18"/>
        <TextView
                style="@style/ItemMargin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Servis rezervasyonu için biletinizi aldıktan sonra otobüs firması ile görüşebilirsiniz"
                app:layout_constraintTop_toBottomOf="@+id/textView18"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

