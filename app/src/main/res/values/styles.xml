<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="DialogNotitle" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
    </style>
    <style name="textStyle">
        <item name="android:textColor">@color/colorTextColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="LoadingDialogDefault" parent="android:Theme.DeviceDefault.Light.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">Loadingâ€¦</item>
        <item name="DialogSpotCount">5</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="AuthEdit">
        <item name="android:height">36dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:background">@drawable/auth_back_edit</item>
    </style>
    <style name="DialogFragmentTheme" parent="AppTheme">
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowAnimationStyle">@style/DialogFragmentAnimation</item>
    </style>
    <style name="DialogFragmentAnimation" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/slide_fragment_right</item>
        <item name="android:windowExitAnimation">@anim/slide_fragment_left</item>
    </style>
    <style name="GreenButton">
        <item name="android:background">@drawable/green_background</item>
        <item name="android:textColor" >@color/white</item>
    </style>
    <style name="ItemMargin">
        <item name="android:layout_marginTop">@dimen/margin_top</item>
        <item name="android:layout_margin">@dimen/margin_top</item>
    </style>

    <style name="TextStyleTitle">
        <item name="android:textColor">@color/grey</item>
        <item name="android:fontFamily">@font/q_medium</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="TextStyleTitleGreen">
        <item name="android:textColor">@color/colorTextColor</item>
        <item name="android:fontFamily">@font/q_bold</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="TextStyleContent">
        <item name="android:textColor">@color/colorTextColor</item>
        <item name="android:fontFamily">@font/q_light</item>
        <item name="android:textSize">10sp</item>
    </style>


    <style name="TextStylePlaceholder">
        <item name="android:textColor">@color/color_edittext</item>
        <item name="android:fontFamily">@font/q_medium</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="TextStyleContentDetail">
        <item name="android:textColor">@color/colorTextColor</item>
        <item name="android:fontFamily">@font/q_regular</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="TextStyleContentRegular">
        <item name="android:textColor">@color/color_edittext</item>
        <item name="android:fontFamily">@font/q_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>
